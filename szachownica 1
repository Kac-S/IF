#include<iostream>

using namespace std;

int main()
{
  int n, x, y;
  cin >> n;
  y = 1;
  for (int i = 0; i < n; i++)
  {
    if (y == 1)
      {
        y = 0;
        x = 1;
      }
      else
      {
        y = 1;
        x = 0;
      }
    for (int j = 0; j < n; j++)
    {
      if (x == 1)
      {
        x = 0;
      }
      else
      {
        x = 1;
      }
      cout << x;
    }
    cout << endl;
  }
  return 0;
}